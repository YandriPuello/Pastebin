<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>Guest</filter-name>
        <filter-class>edu.pucmm.pw.parcial2.filters.AccessControlFilter</filter-class>
    </filter>
    <filter>
        <filter-name>UsuarioFilter</filter-name>
        <filter-class>edu.pucmm.pw.parcial2.filters.UsuarioFilter</filter-class>
    </filter>
    <filter>
        <filter-name>Codigo</filter-name>
        <filter-class>edu.pucmm.pw.parcial2.filters.CodigoFilter</filter-class>
    </filter>
    <filter>
        <filter-name>EditCode</filter-name>
        <filter-class>edu.pucmm.pw.parcial2.filters.EditCode</filter-class>
    </filter>
    <filter>
        <filter-name>EmbedCode</filter-name>
        <filter-class>edu.pucmm.pw.parcial2.filters.EmbedCode</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>Guest</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
        <dispatcher>INCLUDE</dispatcher>
        <dispatcher>ERROR</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>UsuarioFilter</filter-name>
        <url-pattern>/u/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
        <dispatcher>INCLUDE</dispatcher>
        <dispatcher>ERROR</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>Codigo</filter-name>
        <url-pattern>/codigo.jsp</url-pattern>
        <url-pattern>/codigo.jsp*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
        <dispatcher>INCLUDE</dispatcher>
        <dispatcher>ERROR</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>EditCode</filter-name>
        <url-pattern>/editpaste.jsp</url-pattern>
        <url-pattern>/editpaste.jps*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
        <dispatcher>INCLUDE</dispatcher>
        <dispatcher>ERROR</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>EmbedCode</filter-name>
        <url-pattern>/embedpaste.jsp</url-pattern>
        <url-pattern>/embedpaste.jsp*</url-pattern>
        <url-pattern>/embed.jsp</url-pattern>
        <url-pattern>/embed.jsp*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
        <dispatcher>INCLUDE</dispatcher>
        <dispatcher>ERROR</dispatcher>
    </filter-mapping>
    <listener>
        <listener-class>edu.pucmm.pw.parcial2.listeners.InitApplication</listener-class>
    </listener>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
